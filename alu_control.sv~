module alu_control(
		   input logic[4:0] instruction_funct,
		   input logic[1:0] alu_op_ctrl,
		   output logic[3:0] alu_ctrl
		   );

   //******* ALU control logic ***********//
   always@(*) begin
      case(alu_op_ctrl)
	2'b00: alu_ctrl = 4'b0010;
	2'b01: alu_ctrl = 4'b0110;
	

      endcase


   end
   //************************************//




endmodule // alu_control
